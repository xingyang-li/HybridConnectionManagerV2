@{
    ViewData["Title"] = "System Time Information";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="text-center">System Information</h2>
                </div>
                <div class="card-body">
                    <pre id="timeInfo" class="bg-light p-3 rounded">Loading...</pre>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function updateTimeInfo() {
            fetch('/Time/GetTimeData')
                .then(response => response.json())
                .then(data => {
                    const timeInfo =
                        `Current Date and Time (UTC - YYYY-MM-DD HH:MM:SS formatted): ${data.currentTime}\n` +
                        `Current User's Login: ${data.userLogin}\n`;
                    document.getElementById('timeInfo').textContent = timeInfo;
                })
                .catch(error => console.error('Error:', error));
        }

        // Update every second
        setInterval(updateTimeInfo, 1000);
        // Initial update
        updateTimeInfo();
    </script>
}